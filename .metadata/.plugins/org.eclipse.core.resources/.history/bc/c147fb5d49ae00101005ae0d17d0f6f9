int _write(int file, char *ptr, int len) {
	if (HAL_UART_Transmit(&huart2, (uint8_t *)ptr, (uint16_t)len, HAL_MAX_DELAY) == HAL_OK)
	{
		return len;
	}
	return 0;

}
